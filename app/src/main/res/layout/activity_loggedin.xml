<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/loggedInTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Logged in as:"
        android:textSize="30sp" />

    <TextView android:id="@+id/userTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:layout_below="@id/loggedInTextView"
        android:gravity="center"
        android:textSize="30sp" />

    <Button android:id="@+id/changeUserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:layout_below="@id/userTextView"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="CHANGE USER"
        android:textSize="30sp" />

    <Button android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:layout_below="@id/changeUserButton"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="START"
        android:textSize="30sp" />

    <Button android:id="@+id/syncButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:layout_below="@id/startButton"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="SYNCHRONIZE"
        android:textSize="30sp"
        android:stateListAnimator="@null" />

    <Button android:id="@+id/showTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:layout_below="@id/syncButton"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="SHOW TEXTFILE"
        android:textSize="30sp"
        android:stateListAnimator="@null" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:indeterminate="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" >
    </ProgressBar>

</RelativeLayout>